<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#57078e"
    tools:context=".SignupActivity">

    <LinearLayout
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="150dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/textGreeting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dancing_script"
            android:text="Sign up"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="290dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Name" />

        <EditText
            android:id="@+id/tfSignupName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="16"
            android:hint="Juan Dela Cruz"
            android:textColor="#B0B0B0"
            android:textColorHint="#B0B0B0"
            android:inputType="text" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Email" />

        <EditText
            android:id="@+id/tfSignupEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="16"
            android:textColor="#B0B0B0"
            android:hint="juan.d@sample.com"
            android:textColorHint="#B0B0B0"
            android:inputType="textEmailAddress" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Password" />

        <EditText
            android:id="@+id/tfSignupPw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="16"
            android:textColor="#B0B0B0"
            android:textColorHint="#B0B0B0"
            android:hint="Enter password"
            android:inputType="textPassword" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Password" />

        <EditText
            android:id="@+id/tfSignupConfirmPw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="16"
            android:textColor="#B0B0B0"
            android:hint="Confirm password"
            android:textColorHint="#B0B0B0"
            android:inputType="textPassword" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnSignup"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/ButtonTextColor"
            android:layout_marginBottom="15dp"
            android:textSize="16sp"
            android:text="Sign up" />

        <TextView
            android:id="@+id/txtGoToSignin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Already have an account?"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16dp" />
    </LinearLayout>


</RelativeLayout>